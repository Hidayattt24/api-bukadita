{
  "info": {
    "name": "Bukadita Materials API v1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing /api/v1/materials endpoints (list & detail)."
  },
  "item": [
    {
      "name": "List Materials (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/materials?page=1&limit=10&search=nutrisi",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "materials"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "search", "value": "nutrisi" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "List Materials (Admin Unpublished)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/materials?published=false",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "materials"],
          "query": [{ "key": "published", "value": "false" }]
        }
      },
      "response": []
    },
    {
      "name": "Get Material by Slug (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/materials/tips-nutrisi-ibu-hamil",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "materials", "tips-nutrisi-ibu-hamil"]
        }
      },
      "response": []
    },
    {
      "name": "Get Draft Material by Slug (Author/Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{author_or_admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/materials/draft-artikel-pertama",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "materials", "draft-artikel-pertama"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:4000" },
    { "key": "admin_token", "value": "" },
    { "key": "author_or_admin_token", "value": "" }
  ]
}
